<% cache spree_nav_cache_key('footer') do %>
  <footer id="footer" class="pt-2 mx-auto border-top footer-spree" data-turbolinks-permanent>

    <div class="container">
      <div class="row d-xl-flex justify-content-xl-around pb-xl-5">
        <div class="d-flex d-xl-block flex-xl-grow-0 col-xl-4">
          <figure class="logo mx-auto mx-xl-0 pt-xl-2 pb-xl-1">
            <%= logo %>
          </figure>
          <% if current_store.meta_description %>
            <div class="d-none d-xl-block pt-xl-2 footer-spree-info">
              <%= current_store.meta_description %>
            </div>
          <% end %>
        </div>
        <div class="d-block flex-nowrap py-2 order-xl-last col-xl-3 offset-xl-1">
          <% unless current_store.facebook.blank? && current_store.twitter.blank? && current_store.instagram.blank? %>
            <div class="d-none d-xl-block pt-4 pb-3 pl-2 footer-spree-label">
              Seguinos
            </div>
          <% end %>
          <div class="d-flex d-xl-block justify-content-center mx-auto">
            <div class="d-flex">
              <%= spree_social_link('facebook') %>
              <%#= spree_social_link('twitter') %>
              <%= spree_social_link('instagram') %>
            </div>
          </div>
        </div>
        <div class="py-xl-2 col-xl-3 offset-xl-1">
          <div class="d-none d-xl-block pt-4 pb-3 footer-spree-label">
            Contactanos
          </div>
          <div class="d-flex flex-column align-items-center align-items-xl-start pb-3 flex-grow-2 footer-spree-contact-note">
            <div>
              Comunicate con nosotros<br/>
              usando el medio que prefieras<br/>
              haciendo <%= link_to 'click aquí', '/contact-us' %>
            </div>
          </div>
        </div>
      </div>


      <div class="row d-none d-xl-flex border-top py-5 text-uppercase footer-spree-menu-links">

        <div class="col-3">
          <div class="footer-spree-label">
            <%= link_to 'Inicio', root_path %>
          </div>
          <div class="pt-2">
            <%= link_to 'Construcción de piletas', spree.nested_taxons_path('construccion-de-piletas') %>
          </div>
        </div>

        <div class="col-3">
          <div class="footer-spree-label">
            <%= link_to 'Productos', '/productos-para-construir-tu-pileta' %>
          </div>
          <div class="pt-2">
            <%= link_to 'Losetas', spree.nested_taxons_path('productos/losetas-atermicas') %>
          </div>
          <div class="pt-2">
            <%= link_to 'Revestimientos', spree.nested_taxons_path('productos/revestimientos-para-piletas') %>
          </div>
        </div>

        <div class="col-3">
          <div class="footer-spree-label">
            <%= link_to 'Tendencias', spree.nested_taxons_path('tendencias') %>
          </div>
          <div class="pt-2">
            <%= link_to 'Ultimos trabajos', spree.nested_taxons_path('ultimos-trabajos') %>
          </div>
          <div class="pt-2">
            <%= link_to 'Climatización de piletas', spree.nested_taxons_path('climatización-de-piletas') %>
          </div>
        </div>

        <div class="col-3">
          <div class="footer-spree-label">
            <%= link_to 'Quienes somos', '/quienes-somos' %>
          </div>
          <div class="pt-2">
            <%= link_to 'Contacto', '/contact-us' %>
          </div>
        </div>

      </div>


    </div>

    <div id="whatsappButton"></div>

    <%= render 'spree/shared/copyright' %>
  </footer>
<% end %>



